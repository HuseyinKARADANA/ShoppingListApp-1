

<h1>Dashboard Index</h1>


@model AddressViewModel


<form asp-controller="Dashboard" asp-action="AddAddress" method="post">

    <button class="btn btn-primary mb-3 mt-3" type="submit">Add Address</button>
</form>

<form asp-controller="Dashboard" asp-action="MyAddresses" method="post">

    <button class="btn btn-primary mb-3 mt-3" type="submit">My Addresses</button>
</form>


@section Scripts{

